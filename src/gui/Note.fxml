<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="pane" style="-fx-background-color: #383838; -fx-border-color: #424242;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.NoteController">
   <content>
      <VBox>
         <children>
            <HBox fx:id="hbox" alignment="CENTER_RIGHT" prefHeight="39.0" prefWidth="680.0" spacing="20.0" style="-fx-background-color: #424242;">
               <children>
                  <Button fx:id="btSave" focusTraversable="false" mnemonicParsing="false" onAction="#onBtSave" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" style="-fx-background-color: white; -fx-background-radius: 0;" text="Salvar" />
                  <Button fx:id="btExit" focusTraversable="false" mnemonicParsing="false" onAction="#onBtExit" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" style="-fx-background-color: white; -fx-background-radius: 0;" text="Sair">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="txtArea" prefHeight="709.0" prefWidth="680.0" stylesheets="@../css/textarea.css" wrapText="true">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </TextArea>
         </children>
      </VBox>
   </content>
</ScrollPane>
